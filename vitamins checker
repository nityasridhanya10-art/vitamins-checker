    <h1>Vitamin Deficiency Checker</h1>
    
    <div class="input-area">
      <input type="text" id="symptomInput" placeholder="Enter a symptom (e.g., fatigue)">
      <button onclick="addSymptom()">Add Symptom</button>
    </div>

    <div id="symptomList">
      <h3>Symptoms:</h3>
      <ul id="symptomsUl"></ul>
    </div>

    <button onclick="checkDeficiency()" id="checkButton">Check Deficiency</button>

    <div id="results">
      <h3>Possible Vitamin Deficiencies:</h3>
      <ul id="resultsUl"></ul>
    </div>
  </div>

