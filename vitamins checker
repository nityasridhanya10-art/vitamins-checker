#symptomList ul,
#results ul {
  list-style-type: disc;
  padding-left: 20px;
}
const symptoms = [];

function addSymptom() {
  const input = document.getElementById('symptomInput');
  const symptom = input.value.trim().toLowerCase();

  if (symptom && !symptoms.includes(symptom)) {
    symptoms.push(symptom);
    updateSymptomList();
    input.value = '';
  }
}

function updateSymptomList() {
  const list = document.getElementById('symptomsUl');
  list.innerHTML = '';
  symptoms.forEach(s => {
    const li = document.createElement('li');
    li.textContent = s;
    list.appendChild(li);
  });
}

function checkDeficiency() {
  const symptomMap = {
    'fatigue': ['Vitamin B12', 'Iron', 'Vitamin D'],
    'hair loss': ['Biotin', 'Zinc', 'Iron'],
    'muscle weakness': ['Vitamin D', 'Magnesium'],
    'bleeding gums': ['Vitamin C'],
    'night blindness': ['Vitamin A'],
    'dry skin': ['Vitamin A', 'Vitamin E'],
    'numbness': ['Vitamin B12', 'Vitamin B1'],
    'slow wound healing': ['Vitamin C', 'Zinc'],
    'depression': ['Vitamin D', 'Vitamin B6', 'Vitamin B12'],
    'brittle nails': ['Biotin'],
  };

  const deficiencyCount = {};

  symptoms.forEach(symptom => {
    const vitamins = symptomMap[symptom];
    if (vitamins) {
      vitamins.forEach(vitamin => {
        deficiencyCount[vitamin] = (deficiencyCount[vitamin] || 0) + 1;
      });
    }
  });

  const sortedDeficiencies = Object.entries(deficiencyCount)
    .sort((a, b) => b[1] - a[1]);

  const resultUl = document.getElementById('resultsUl');
  resultUl.innerHTML = '';

  if (sortedDeficiencies.length === 0) {
    resultUl.innerHTML = '<li>No deficiencies matched the symptoms.</li>';
    return;
  }

  sortedDeficiencies.forEach(([vitamin, count]) => {
    const li = document.createElement('li');
    li.textContent = `${vitamin} (matched ${count} symptom${count > 1 ? 's' : ''})`;
    resultUl.appendChild(li);
  });
}
